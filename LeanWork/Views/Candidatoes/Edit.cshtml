@using Domain.Entities
@model Domain.Entities.Viewmodels.CandidatoViewmodel
@{
    ViewData["Title"] = "Edit";
    var vagas = Model.Vagas;
}

<h1>Edit</h1>

<h4>Candidato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competencias" class="control-label"></label>
                <input asp-for="Competencias" class="form-control" />
                <span asp-validation-for="Competencias" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.Vagas, vagas, "Selecione uma vaga")
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
